<ul class='nav nav-tabs'>
  <li><%= link_to "Back", @post, :class => 'navbar-toggle collapsed' %></li>
  </ul>
</br>
<%= form_for @post do |f| %>
  <div class="form-group">
  <p>
    <%= f.label "title" %><br>
    <%= f.text_field "title", :class => "form-control" %>
  </p>
  </div>
  <div class="form-group">
  <p>
    <%= f.label "body" %><br>
    <%= f.text_area "body", :class => "form-control", :id => "text-area" %>
  </p>
  </div>
 
  <div class="form-group">
  <p>
    <%= f.submit "Save Changes", :class => 'btn btn-primary btn-block' %>
  </p>
  </div>
<% end %>