<div class="container">
<%= form_for @post do |f| %>

	<div class="form-group">
	<p>
		<%=f.label "title" %>
		<%=f.text_field "title", :class => "form-control", :placeholder => "Untitled" %>
	</p>
	</div>
	<div class="form-group">
	<p>
		<%= f.label "body" %>
		<%= f.text_area "body", :class => "form-control", :placeholder => "What's on your mind?", :id => "text-area" %>
	</p>
	</div>

	<div class="actions">
<%= f.submit :class => 'btn btn-primary btn-block' %>
</div>

	<% end %>
	</div>